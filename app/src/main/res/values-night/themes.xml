<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Market" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/market_orange</item>
        <item name="colorPrimaryVariant">@color/market_light_orange</item>
        <item name="colorOnPrimary">#000000</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/market_orange</item>
        <item name="colorSecondaryVariant">@color/market_light_orange</item>
        <item name="colorOnSecondary">@color/market_teflon</item>
        <!-- Status bar color. -->
        <!--<item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>-->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorOnPrimary</item>
        <item name="android:windowLightStatusBar">false</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="Theme.Market.Splash">
        <item name="android:windowBackground">@drawable/background_splash_screen</item>
    </style>
</resources>